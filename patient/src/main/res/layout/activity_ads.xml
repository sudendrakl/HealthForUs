<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bizapps.com.healthforusPatient.activity.AdsActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ad1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/aenterprises"
                android:text="@string/ad1"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"

                />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="1dp" android:layout_marginBottom="1dp" android:background="@color/black80"/>
            <TextView
                android:id="@+id/ad2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ashwani_hospital"
                android:text="@string/ad2"
                android:layout_margin="5dp"
                />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="1dp" android:layout_marginBottom="1dp" android:background="@color/black80"/>
            <TextView
                android:id="@+id/ad3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/vardan_care_center"
                android:text="@string/ad3"
                android:layout_margin="5dp"

                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
