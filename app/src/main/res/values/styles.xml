<resources>

  <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
  <style name="AppBaseTheme"
      parent="Theme.AppCompat.Light">
    <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme"
      parent="AppBaseTheme">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  </style>

  <style name="AppMaterialTheme"
      parent="AppMaterialTheme.Base"></style>

  <style name="AppThemeNew"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:screenOrientation">portrait</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <!--<item name="colorControlNormal">#f8d98e</item>-->
    <!--<item name="colorControlActivated">#f8d98e</item>-->
    <!--<item name="colorControlHighlight">@color/white</item>-->
  </style>

  <style name="AppMaterialTheme.Base"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="InvitationDialog"
      parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">#FFCC00</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:background">#303F9F</item>
  </style>

  <style name="ResturantsScreenTheme"
      parent="ResturantsScreenTheme.Base">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  </style>

  <style name="ResturantsScreenTheme.Base"
      parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <!-- <item name="actionOverflowButtonStyle">@style/OverFlowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowStyle</item> -->
  </style>

  <!--  <style name="OverFlowStyle" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/resturants_filter</item>
    </style> -->

  <style name="expandedappbar"
      parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">48sp</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="collapsedappbar"
      parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>

  <style name="AppThemeSearch"
      parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="TextAppearance.MyApp.Title.Collapsed"
      parent="android:TextAppearance">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">11sp</item>
  </style>

  <style name="TextAppearance.MyApp.Title.Expanded"
      parent="android:TextAppearance">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_down</item>
  </style>

  <style name="AppMaterialTheme.AppBarOverlay"
      parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppMaterialTheme.PopupOverlay"
      parent="ThemeOverlay.AppCompat.Light"/>

</resources>