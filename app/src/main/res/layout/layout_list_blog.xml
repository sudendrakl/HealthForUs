<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_blog"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_blogname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="asdfsdafdsf"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_blogdrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:textColor="#80000000"/>

    <TextView
        android:id="@+id/tv_blogdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#8000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="asdfdsafdasfdsafdsf asddfasdfsadfsdf"
        android:maxLength="100"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
